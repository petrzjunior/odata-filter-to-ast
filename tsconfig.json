{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2020",
		"lib": [
			"ES2021",
			"DOM"
		],
		"moduleResolution": "NodeNext",
		"isolatedModules": true,
		"outDir": "dist",
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": [
		"src"
	]
}
